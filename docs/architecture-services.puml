@startuml
skinparam backgroundColor #ffffff
skinparam shadowing false

rectangle "Stations" as Stations {
  [service-station] as S
}

[service-gateway] as GW
[service-broker] as BR
[service-degrader] as DG
[service-telegram] as TG
[service-orchestrator] as ORCH
[frontend] as FE
[api client] as Client
[docker engine] as DOCKER
[telegram api] as TAPI

S --> GW : register + heartbeat
GW --> S : adjust
DG --> GW : list + adjust

S --> BR : station updates
BR --> FE : WebSocket /ws
BR --> TG : alerts /api/send
TG --> TAPI : sendMessage

Client --> ORCH : create station /api/stations
ORCH --> DOCKER : Docker API
ORCH --> S : bootstrap
@enduml
